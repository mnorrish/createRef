{
  "name": "createref",
  "version": "0.0.8",
  "description": "A React.createRef emulation for React < 16.3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf ./dist; tsc -d --outDir ./dist",
    "test": "jest"
  },
  "keywords": [
    "React"
  ],
  "repository": "https://github.com/mnorrish/createRef",
  "author": "Matthew Norrish <matt@mnorrish.co.nz> (https://github.com/mnorrish)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/react": "^16.3.5",
    "jest": "^22.4.3",
    "typescript": "^2.8.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "<rootDir>/jestTypeScriptPreprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|js)"
    ]
  }
